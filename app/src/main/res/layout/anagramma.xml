<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/t2"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="275dp"
            android:layout_height="65dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:alpha="0.75"
            android:background="#FFFFFF"
            android:gravity="center"
            app:srcCompat="@drawable/an1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="275dp"
            android:layout_height="103dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:alpha="0.75"
            app:srcCompat="@drawable/an2" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="274dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:alpha="0.75"
            android:layout_marginLeft="30dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="В легенде про Архимеда, какую вещь поручил проверить Гиерон II ученому?"
            android:textColor="@android:color/background_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="276dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editText3"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:alpha="0.75"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Введите ответ"
            android:onClick="clear"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:alpha="0.75"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:onClick="clear1"
            android:text="Введите ответ"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:alpha="0.75"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:onClick="clear2"
            android:text="Введите ответ"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:onClick="Test"
            android:text="Проверить"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>